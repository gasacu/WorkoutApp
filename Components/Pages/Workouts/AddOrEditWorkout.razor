@page "/workout/add/{UserId:int}"
@page "/workout/edit/{WorkoutId:int}"
@attribute [StreamRendering]
@rendermode InteractiveServer


@if (WorkoutId == null)
{
    <PageTitle>Add Workout</PageTitle>
    <h3>Create a new Workout for client: @user.FirstName @user.LastName</h3>
    <hr />
}
else
{
    <PageTitle>Edit Workout</PageTitle>
    <h3>Edit Workout for client: @user.FirstName @user.LastName</h3>
    <hr />
}


<EditForm Model="@workout" OnValidSubmit="@Save" style="box-shadow: 0 14px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 10px 0 rgba(0, 0, 0, 0.19); padding: 30px;" FormName="AddWorkoutForm">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label style="font-weight: 600">Name :</label>
        <InputText @bind-Value="@workout.Name" class="form-control col-sm-5" />
        <ValidationMessage For="@(() => @workout.Name)" />
    </div>
    <div class="form-group">
        <label style="font-weight: 600">Date :</label>
        <InputDate @bind-Value="@workout.Date" class="form-control col-sm-5" />
        <ValidationMessage For="@(() => @workout.Date)" />
    </div>
    @if (WorkoutId == null)
    {
        <div class="form-group">
            <Button Class="PrimaryButton" Style="color: #fff" Type="ButtonType.Submit" Margin="Margin.Is3.FromTop">
                Save
            </Button>
            <Button Class="SecondaryButton" Style="color: #fff" Type="ButtonType.Link" To="users" Margin="Margin.Is3.FromTop">Back to List</Button>
        </div>
    }
    else
    {
        <div class="form-group">
            <Button Class="PrimaryButton" Style="color: #fff" Type="ButtonType.Submit" Margin="Margin.Is3.FromTop">
                Save
            </Button>
            <Button Class="SecondaryButton" Style="color: #fff" Type="ButtonType.Link" To="workouts" Margin="Margin.Is3.FromTop">Back to List</Button>
        </div>
    }
    
</EditForm>



